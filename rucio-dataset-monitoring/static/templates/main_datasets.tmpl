    </table>
</div>

<div class="footer" style="bottom: 0px; width: 100%;background-color: #262626;border-top: 1px solid #333;">
    <img alt='CERN' src='/{{.govar_BASE_EP}}/static/img/LogoOutline-White.svg' style="height: 70px;margin: 20px;">
</div>

